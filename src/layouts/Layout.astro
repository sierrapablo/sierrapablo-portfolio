---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface LayoutProps {
  title: string;
  description: string;
  image?: ImageMetadata;
  focused: string;
}

const { title, description, image, focused } = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="es">
  <BaseHead {title} {description} image={image} />
  <body class="bg-neutral-100 min-h-screen flex flex-col">
    <Navbar focused={focused} />
    <slot />
    <Footer />
  </body>
</html>
