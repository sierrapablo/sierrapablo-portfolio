---
import { Image } from 'astro:assets';
import heroImg from '../assets/hero-logo.webp';

export const prerender = true;
---

<section class="flex flex-col items-center flex-1 w-full">
  <div
    class="flex-1 md:w-auto lg:max-w-[1240px] py-6 px-12 flex flex-col md:flex-row justify-between items-center gap-4"
  >
    <div class="w-full md:flex-1">
      <p class="text-4xl font-bold text-neutral-800 py-6">
        Desarrollo tecnología práctica para transformar
        <span class="text-blue-500">desafíos en oportunidades.</span>
      </p>
      <p class="min-h-32 text-lg text-neutral-700 font-semibold">
        <span id="typed" class="after:content-['|'] after:animate-blink after:ml-[2px]"></span>
      </p>
      <div class="flex flex-row justify-center gap-2">
        <a
          href="/proyectos"
          class="bg-blue-500 text-neutral-100 min-w-[150px] text-center px-6 py-2 font-bold rounded-md hover:bg-blue-300 hover:text-blue-500 ease-in-out duration-300"
        >
          Proyectos
        </a>
      </div>
    </div>
    <div class="w-full md:flex-1 flex justify-center">
      <Image src={heroImg} alt="heroImg" class="rounded-none w-full h-auto" loading="eager" />
    </div>
  </div>

  <!-- Script para efecto tipeado -->
  <script src="/src/scripts/global.ts"></script>
</section>
