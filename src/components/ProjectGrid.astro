---
import { slide } from "astro:transitions";

type Project = {
  title: string;
  description: string;
  link: string;
  technologies: string[];
};

const projects: Project[] = [
  {
    title: "sierrapablo-portfolio-api",
    description: "El código fuente del backend de este sitio web.",
    link: "https://github.com/sierrapablo/sierrapablo-portfolio-api",
    technologies: ["Node.js", "Express", "TypeScript"],
  },
  {
    title: "reverse-proxy-monitoring",
    description: "Proxy inverso con SSL monitorizado con Prometheus y Grafana.",
    link: "https://github.com/sierrapablo/reverse-proxy-monitoring",
    technologies: ["Docker", "Shell", "Nginx"],
  },
  {
    title: "log-archive",
    description: "Aplicación de terminal para archivar logs.",
    link: "https://github.com/sierrapablo/log-archive",
    technologies: ["Rust", "Docker"],
  },
  {
    title: "hidalvento-web",
    description: "Página web para Reformas Hidalvento.",
    link: "https://github.com/sierrapablo/hidalvento-web",
    technologies: ["React", "TypeScript", "TailwindCSS"],
  },
  {
    title: "metrio-webpage",
    description: "Página web para Metrio.",
    link: "https://github.com/Metrio-ai/metrio-webpage",
    technologies: ["React", "Javascript", "CSS3"],
  },
  {
    title: "dotfiles",
    description: "El repositorio de mis dotfiles de Linux.",
    link: "https://github.com/sierrapablo/dotfiles",
    technologies: ["Shell", "Lua", "CSS", "Conf"],
  },
  {
    title: "fasealterna-web",
    description: "Página web para la banda de rock Fase Alterna",
    link: "https://github.com/sierrapablo/fasealterna-web",
    technologies: ["Astro", "React", "Typescript", "TailwindCSS"],
  },
  {
    title: "sierrapablo.dev",
    description: "El código fuente de este sitio web.",
    link: "https://github.com/sierrapablo/sierrapablo-portfolio",
    technologies: ["Astro", "TypeScript", "TailwindCSS"],
  },
];
---

<section class="flex flex-col items-center flex-1 w-full" transition:animate={slide({ duration: "1s" })}>
  <div class="flex-1 grid gap-4 sm:grid-cols-2">
    {
      projects.map((project) => (
        <a
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-neutral-100 p-2 shadow rounded-md gap-2 duration-200 ease-in-out hover:scale-105 hover:shadow-2xl hover:bg-white flex flex-col justify-between transition-all"
        >
          <div>
            <h3 class="text-lg text-blue-500 font-bold mb-1">
              {project.title}
            </h3>
            <p class="text-sm text-neutral-700 mb-2">{project.description}</p>
          </div>
          <div class="mt-auto text-xs text-gray-500 flex gap-2 flex-wrap">
            {project.technologies.map((tech) => (
              <span class="bg-blue-200 text-neutral-800 rounded px-2 py-0.5">
                {tech}
              </span>
            ))}
          </div>
        </a>
      ))
    }
  </div>
</section>
