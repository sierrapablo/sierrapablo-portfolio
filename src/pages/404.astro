---
import Layout from '../layouts/Layout.astro';
import HEAD_CONTENT from '../data/404.json';
---

<Layout {...HEAD_CONTENT}>
  <main class="flex flex-1 flex-col justify-center items-center">
    <section class="flex flex-col items-center flex-1 w-full">
      <div
        class="flex-1 md:w-auto lg:max-w-[1240px] py-6 px-12 flex flex-col md:flex-row justify-between items-center gap-4"
      >
        <div class="w-full md:flex-1">
          <p class="text-4xl font-bold text-neutral-800 py-6">
            Error 404<br />
            <span class="text-blue-500">Recurso no encontrado.</span>
          </p>
          <div class="flex flex-row justify-center gap-2">
            <a
              href="/"
              class="bg-blue-500 text-neutral-100 min-w-[150px] text-center px-6 py-2 font-bold rounded-md hover:bg-blue-300 hover:text-blue-500 ease-in-out duration-300"
            >
              Volver
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
